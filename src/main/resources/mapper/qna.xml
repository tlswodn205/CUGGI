<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tencoding.CUGGI.repository.interfaces.QnaRepository"> 

	<insert id= "insert">
		INSERT INTO qna_tb(title, content, user_id, created_at)
		values(#{title},#{content},#{userId},now());
	</insert>
	
	<update id="updateById">
		UPDATE qna_tb SET title = #{title},
		content = #{content}
		WHERE id = #{id};
	</update>
	
	<delete id="deleteById">
		DELETE FROM qna_tb WHERE id = #{id};
	</delete>
	
	<select id="findById" resultType = "com.tencoding.CUGGI.repository.model.Qna">
		SELECT * FROM qna_tb WHERE id = #{id};
	</select>
	
	<select id="findByALL" resultType = "com.tencoding.CUGGI.repository.model.Qna">
		SELECT * FROM qna_tb;
	</select>
</mapper>
